<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:context=".fragments.MusicFragment">


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_below="@+id/ivPlay"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/tvCurrentTime" />

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="110dp"
        android:layout_height="107dp"
        android:layout_below="@+id/etSong"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_play_circle_outline_24" />

    <TextView
        android:id="@+id/tvCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPlay"
        android:layout_marginTop="10dp"
        android:text="0:00" />

    <TextView
        android:id="@+id/tvTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPlay"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/seekBar"
        android:text="4:00" />

    <ImageView
        android:id="@+id/ivAddSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_baseline_playlist_add_24" />

    <EditText
        android:id="@+id/etSong"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ivAddSong"
        android:ems="10"
        android:hint="@string/song_url"
        android:inputType="textPersonName"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ivDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/etSong"
        android:src="@drawable/ic_baseline_check_24" />

</RelativeLayout>